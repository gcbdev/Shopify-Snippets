    },
    {
      "type": "text",
      "id": "button2_text",
      "label": "Button 2 Text",
      "default": "Button 2"
    },
    {
      "type": "text",
      "id": "button3_link",
      "label": "Button 3 Link",
      "default": "https://example.com/button3"
    },
    {
      "type": "text",
