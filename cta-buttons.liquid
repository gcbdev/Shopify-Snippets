{% comment %} create a section here with 3 buttons with links {% endcomment %}

<style>
  section.buttons a {
      padding: 15px 40px;
      font-weight: bold;
       background-color: #f4f4f4;
      border: 1px solid #e5e5e5;
      border-radius: 10px;
  }

  section.buttons a:hover {
      background: #f9c43e;
  }

  section.buttons .cta-buttons {
      display: flex;
      justify-content: center;
      gap: 12px;
      border-radius: 12px;
  }

  @media (max-width: 767px) {

   section.buttons  {
       padding:20px 10px;
   }

   section.buttons .cta-buttons {
     flex-direction: column !important;
  }
  section.buttons a {
      text-align: center;
      padding: 10px 20px;
      font-weight: bold;
       background-color: #f4f4f4;
      border: 1px solid #e5e5e5;
      border-radius: 10px;
  }

  }
</style>

<section class="buttons">
  <div class="cta-buttons">
    <a href="{{ section.settings.button1_link }}" class="btn">{{ section.settings.button1_text }}</a>
    <a href="{{ section.settings.button2_link }}" class="btn">{{ section.settings.button2_text }}</a>
    <a href="{{ section.settings.button3_link }}" class="btn">{{ section.settings.button3_text }}</a>
  </div>
</section>

