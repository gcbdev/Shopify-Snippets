{% schema %}
{
  "name": "Custom Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo Image"
    },
    {
      "type": "textarea",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "Add a short description about your store here."
    },
    {
      "type": "url",
      "id": "facebook_link",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "twitter_link",
      "label": "Twitter URL"
    },
    {
      "type": "url",
      "id": "instagram_link",
      "label": "Instagram URL"
    },
    {
      "type": "link_list",
      "id": "menu_quick_links",
      "label": "Quick Links Menu"
    },
    {
      "type": "link_list",
      "id": "menu_categories",
      "label": "Categories Menu"
    },
    {
      "type": "link_list",
      "id": "menu_employment",
      "label": "Employment Menu"
    },
    {
      "type": "link_list",
      "id": "menu_stores",
      "label": "Stores Menu"
    }
  ],
  "presets": [
    {
      "name": "Custom Footer"
    }
  ]
}
{% endschema %}

<section class="cust-footer">
  <div class="footer-cont">
    <div class="logo footer-col">
      <div class="footer-logo">
        {% if section.settings.logo_image %}
          {{ section.settings.logo_image | image_url: width: 150 | image_tag: alt: shop.name }}
        {% else %}
          <img
            src="https://cdn.shopify.com/s/files/1/0887/4105/2730/files/Lucky_1_5f72d6ed-98bd-4891-bb9e-f361d8e3d792.png?v=1721036899"
            alt="{{ shop.name }}"
          >
        {% endif %}
      </div>
      <div class="footer-description">
        {{ section.settings.footer_text }}
      </div>
      <div class="social-icons">
        {% if section.settings.facebook_link != blank %}
          <a href="{{ section.settings.facebook_link }}" target="_blank" rel="noopener" aria-label="Facebook">
            <i class="fab fa-facebook-f"></i>
          </a>
        {% endif %}
        {% if section.settings.twitter_link != blank %}
          <a href="{{ section.settings.twitter_link }}" target="_blank" rel="noopener" aria-label="Twitter">
            <i class="fab fa-twitter"></i>
          </a>
        {% endif %}
        {% if section.settings.instagram_link != blank %}
          <a href="{{ section.settings.instagram_link }}" target="_blank" rel="noopener" aria-label="Instagram">
            <i class="fab fa-instagram"></i>
          </a>
        {% endif %}
      </div>
    </div>
    <div class="footer-col">
      <h3>Quick links</h3>
      {% if linklists[section.settings.menu_quick_links].links.size > 0 %}
        <nav>
          <ul>
            {% for link in linklists[section.settings.menu_quick_links].links %}
              <li>
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </nav>
      {% endif %}
    </div>
    <div class="footer-col">
      <h3>Popular categories</h3>
      {% if linklists[section.settings.menu_categories].links.size > 0 %}
        <nav>
          <ul>
            {% for link in linklists[section.settings.menu_categories].links %}
              <li>
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </nav>
      {% endif %}
    </div>
    <div class="footer-col">
      <h3>Employment</h3>
      {% if linklists[section.settings.menu_employment].links.size > 0 %}
        <nav>
          <ul>
            {% for link in linklists[section.settings.menu_employment].links %}
              <li>
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </nav>
      {% endif %}
    </div>
    <div class="footer-col stores">
      <h3>Stores</h3>
      {% if linklists[section.settings.menu_stores].links.size > 0 %}
        <nav>
          <ul>
            {% for link in linklists[section.settings.menu_stores].links %}
              <li>
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </nav>
      {% endif %}
    </div>
  </div>
</section>

<section class="cpr-footer">
  <div class="cpr-cont">
    <div class="cpr-text">
      <p>
        Copyright {{ 'now' | date: '%Y' }}
        {{ shop.name }}. All Rights Reserved.
      </p>
    </div>
    <div class="cpr-text">
      <ul>
        <li><a href="{{ routes.policies_url }}">Refund Policy</a></li>
        <li><a href="{{ routes.policies_url }}">Privacy Policy</a></li>
        <li><a href="{{ routes.terms_url }}">Terms Of Service</a></li>
      </ul>
    </div>
  </div>
</section>

<style>


        .logo.footer-col img {
            max-width: 150px;
            width: 100%;
        }
        section.cust-footer {
            padding: 120px 50px;
        }
        .cpr-footer {
            background-color: #EE6150;
            padding: 20px;
            text-align: center;
        }
        .cpr-cont {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            max-width: 1770px;
            margin: 0 auto;
        }
        .cpr-text {
            flex: 1;
            margin: 10px;
        }
        .cpr-text p {
            color:#fff;
            margin: 0;
            text-align: left;
        }
        .cpr-text ul {
            color:#fff;
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            justify-content: flex-end;
        }
        .cpr-text ul li {
            margin: 0 10px;
        }
        .footer-col h3 {
            margin-bottom: 15px;
           font-family: "breweryno2w06-boldregular", sans-serif;
          font-weight: bold;

        }
        .footer-col nav ul {
            list-style: none;
            padding: 0;
        }
        .footer-col nav ul li {
            margin-bottom: 10px;
        }
        .footer-description {
            margin: 15px 0;
        }
        .social-icons {
            display: flex;
            gap: 10px;
        }
        .social-icons a {
            display: inline-block;
            width: 30px;
            height: 30px;
            background-color: #333;
            color: #fff;
            border-radius: 50%;
            text-align: center;
            line-height: 30px;
        }
        .footer-cont {
          display: grid;
          grid-template-columns: 1fr 1fr 1fr 1fr 1fr
      }

      .footer-cont a,
      .footer-cont li{
        text-decoration: none;
        color: #444444 !important;
      }


      .logo.footer-col {
        padding-right: 50px;
      }

     .social-icons a {
        color: #ee6150 !important;
        background: none;
        font-size: 24px;
    }

    .stores ul {
      display: grid;
      grid-template-columns: 1fr 1fr;
  }
</style>
